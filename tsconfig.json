{
    "compilerOptions": {
        "target": "ESNext",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "stripInternal": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
